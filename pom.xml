    <modelVersion>4.0.0</modelVersion>
    <groupId>com.gasteva</groupId>
    <artifactId>build</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>
    <name>build</name>
    <scm>
        <connection>scm:git:git@github.com:gasteva/littleTwitter.git</connection>
        <tag>v@{build_version}</tag>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <build.prop.dir>${project.basedir}</build.prop.dir>
        <!-- set default values for ant variables used in build system as empty string -->
        <main.basedir>${build.prop.dir}</main.basedir>
        <build.deponly>false</build.deponly>
        <java.version>1.8</java.version>
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <kotlin.version>1.1.50</kotlin.version>
        <junit.version>4.12</junit.version>
        <jooq.version>3.9.5</jooq.version>
        <spark.version>2.5.4</spark.version>
        <mysql.version>5.1.40</mysql.version>
    </properties>

    <repositories>
        <repository>
            <id>mvnrepository</id>
            <url>http://repo1.maven.org/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <modules>
        <module>frontend</module>
        <module>contract</module>
        <module>mySqlDataAccess</module>
        <module>jsonProcessor</module>

